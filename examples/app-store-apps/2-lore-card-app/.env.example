# LoreCard Configuration
# Copy this file to .env and update with your own values

# Optional: LearnCard Host Origin (for postMessage validation)
# Default: https://learncard.app
# Development: http://localhost:3000
LEARNCARD_HOST_ORIGIN=https://learncard.app

# Optional: Pre-configured Badge Template URIs
# These should be actual boost/template URIs from your LearnCard Network instance
# Examples provided are placeholders - replace with your actual template IDs

# Social-Emotional Learning Badges
BADGE_TEAMWORK_URI=lc:network:network.learncard.com/trpc:boost:teamwork-champion
BADGE_LEADERSHIP_URI=lc:network:network.learncard.com/trpc:boost:natural-leader
BADGE_CREATIVITY_URI=lc:network:network.learncard.com/trpc:boost:creative-thinker
BADGE_PROBLEM_SOLVING_URI=lc:network:network.learncard.com/trpc:boost:puzzle-master
BADGE_EMPATHY_URI=lc:network:network.learncard.com/trpc:boost:empathetic-soul
BADGE_COMMUNICATION_URI=lc:network:network.learncard.com/trpc:boost:eloquent-speaker
BADGE_COURAGE_URI=lc:network:network.learncard.com/trpc:boost:brave-heart
BADGE_WISDOM_URI=lc:network:network.learncard.com/trpc:boost:wise-sage
