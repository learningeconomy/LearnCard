{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "name": "scouts",
    "sourceRoot": "apps/scouts/src",
    "projectType": "application",
    "root": "apps/scouts",
    "tags": [],
    "implicitDependencies": ["learn-card-base"],
    "namedInputs": {
        "source": ["{projectRoot}/src/**/*"],
        "tests": ["{projectRoot}/tests/**/*"],
        "report": ["{projectRoot}/coverage/playwright-report/**/*"],
        "dist": ["{projectRoot}/build/**/*"]
    },
    "targets": {
        "build": {
            "executor": "nx:run-script",
            "inputs": ["source"],
            "outputs": ["dist"],
            "options": {
                "script": "build"
            }
        },
        "docker-build": {
            "executor": "nx:run-script",
            "inputs": ["source"],
            "outputs": ["dist"],
            "dependsOn": ["^build"],
            "options": {
                "script": "docker-build"
            }
        },
        "test": {
            "executor": "nx:run-script",
            "inputs": ["source", "tests"],
            "options": {
                "script": "test"
            }
        }
    }
}
