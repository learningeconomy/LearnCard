{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "useUnknownInCatchVariables": false,
    "sourceMap": true,
    "strict": true,
    "target": "ES2017",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src"]
}
