{
  "name": "@metamask/template-snap",
  "version": "0.7.0",
  "description": "The 'Hello, world!' of MetaMask Snaps.",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/MetaMask/snap-template.git"
  },
  "license": "MIT",
  "main": "src/index.js",
  "files": [
    "dist/",
    "images/",
    "snap.manifest.json"
  ],
  "scripts": {
    "build:website": "node ./scripts/build-website.js",
    "pre:build": "shx cp ../../packages/learn-card-core/src/didkit/pkg/didkit_wasm_bg.wasm src/didkit_wasm_bg.wasm",
    "build": "pnpm pre:build && rollup -c && pnpm post:build",
    "post:build": "./fixBundle.sh",
    "manifest": "mm-snap manifest --fix",
    "eval": "mm-snap eval -b dist/bundle.js",
    "serve": "mm-snap serve",
    "clean": "rimraf dist/*",
    "dev": "pnpm build && pnpm manifest && pnpm eval && pnpm serve",
    "test": "echo 'TODO'"
  },
  "devDependencies": {
    "@metamask/auto-changelog": "^2.5.0",
    "@metamask/eslint-config": "^8.0.0",
    "@metamask/eslint-config-jest": "^8.0.0",
    "@metamask/eslint-config-nodejs": "^8.0.0",
    "@metamask/providers": "^9.0.0",
    "@metamask/rollup-plugin-snaps": "^0.18.1",
    "@metamask/snap-types": "^0.18.1",
    "@metamask/snaps-cli": "^0.18.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "mkdirp": "^1.0.4",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.71.1",
    "rollup-plugin-base64": "^1.0.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-esbuild": "^4.9.1",
    "shx": "^0.3.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@learncard/core": "workspace:*"
  }
}
