{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2021"
        ],
        "noLib": false,
        "rootDir": "src",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "bundler"
    },
    "include": [
        "src",
        "test"
    ],
    "exclude": [
        "node_modules",
        "example"
    ]
}
