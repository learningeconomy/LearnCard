{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2021"],
    "noLib": false,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
        "types/*": ["src/types/*"],
        "@wallet/*": ["src/wallet/*"],
        "@helpers/*": ["src/wallet/helpers/*"],
        "@didkit/*": ["src/didkit/*"]
    },
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "example"]
}
