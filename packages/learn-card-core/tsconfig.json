{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2017"],
    "noLib": false,
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
        "types/*": ["types/*"],
        "@wallet/*": ["wallet/*"],
        "didkit/*": ["didkit/*"]
    },
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "test", "example"]
}
