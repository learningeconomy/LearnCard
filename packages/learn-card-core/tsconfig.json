{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "lib": ["dom", "es2021"],
        "noLib": false,
        "rootDir": "src",
        "baseUrl": ".",
        "paths": {
            "types/*": ["src/types/*"],
            "types/wallet": ["src/types/wallet"],
            "@wallet/*": ["src/wallet/*"],
            "@helpers/*": ["src/wallet/helpers/*"],
            "@didkit/*": ["src/didkit/*"]
        },
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "bundler"
    },
    "include": ["src", "test"],
    "exclude": ["node_modules", "example"]
}
