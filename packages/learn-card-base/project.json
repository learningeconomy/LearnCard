{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/learn-card-base/src",
    "projectType": "library",
    "tags": [],
    "implicitDependencies": ["lca-api-plugin"],
    "namedInputs": {
        "source": ["{projectRoot}/src/**/*"]
    },
    "targets": {
        "test": {
            "executor": "nx:run-script",
            "inputs": ["source"],
            "options": {
                "script": "test"
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/learn-card-base/**/*.{ts,tsx,js,jsx}"]
            }
        }
    }
}
