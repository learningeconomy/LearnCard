function logMessage(message, level) {
    if (level === void 0) { level = 0 /* Verbose */; }
    if (level < currentLogLevel) {
        return;
    }
    switch (level) {
        case 3 /* Error */:
            // print red
            console.error("\u001B[0;31m" + message + "\u001B[0m");
            break;
        case 2 /* Warning */:
            console.warn("\u001B[1;33m" + message + "\u001B[0m");
            break;
        case 1 /* Normal */:
        case 0 /* Verbose */:
            console.log(message);
    }
}
