<tr><td>["${word}"]</td><td><span class="apg-remainder">ab12</span></td></tr>
<tr><td>["${alpha}"]</td><td><span class="apg-remainder">b</span></td></tr>
<tr><td>["${num}"]</td><td><span class="apg-remainder">2</span></td></tr>
